#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin >> n;
	vector<int> nums(n);
	for(int i = 0;i < n;i++) cin >> nums[i];

	int k = 1;
	int res = 1;
	int j = 0;
	for(int i = 1;i < n;i++) {
		if(nums[i] > nums[j]) {
			k++;
			j = i;
		} else {
			k = 1;
			j = i;
		} 
		res = max(res, k);
	}

	cout << res;

	return 0;
}
